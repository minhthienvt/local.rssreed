{% extends 'SMAdminBundle::admin.html.twig' %}
{% block body %}
<h1>Rss Feed creation</h1>

<hr />

<form action="{{ path('admin_rssfeed_create') }}" method="post" {{ form_enctype(form) }} class="form-horizontal">
    <fieldset>
        <div class="control-group">
            <label class="control-label" for="input01">{{ form_label(form.title) }} <font style="color:red;">*</font></label>
            <div class="controls">
                {{ form_errors(form.title) }}
                {{ form_widget(form.title) }}
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="input01">{{ form_label(form.description) }}</label>
            <div class="controls">
                {{ form_errors(form.description) }}
                {{ form_widget(form.description) }}
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="input01">{{ form_label(form.external_link) }} <font style="color:red;">*</font></label>
            <div class="controls">
                {{ form_errors(form.external_link) }}
                {{ form_widget(form.external_link) }}
            </div>
        </div>

        <div class="control-group">
            <label class="control-label" for="input01">
            </label>
            <div class="controls checkbox-group">
                {{ form_errors(form.automatic_refesh) }}
                {{ form_widget(form.automatic_refesh) }}
                <span>Rafraichissement automatique active toules les</span>

                {{ form_errors(form.time_refesh) }}
                {{ form_widget(form.time_refesh) }}
            </div>
        </div>

        <div class="control-group">
            <label class="control-label" for="input01">

            </label>
            <div class="controls controls-1">
                <span>Plage horaire de rafraichissement</span>
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                &nbsp;&nbsp;&nbsp;&nbsp;
                <div class="block-number">
                    De
                    {{ form_errors(form.begin_refesh) }}
                    {{ form_widget(form.begin_refesh) }}

                    A
                    {{ form_errors(form.end_refesh) }}
                    {{ form_widget(form.end_refesh) }}



                    <span style="font-style: italic;">Please input number between 0 - 23, or leave both blank</span>
                </div>
            </div>
        </div>

        <div class="control-group">
            <label class="control-label" for="input01">
                Status
            </label>
            <div class="controls checkbox-group">
                {{ form_errors(form.main_status) }}
                {{ form_widget(form.main_status) }}
            </div>
        </div>

        <div class="form-actions">
            {{ form_row(form._token) }}
            <button type="submit" class="btn btn-primary">Save changes</button>
            <a href="{{ path('admin_rssfeed', {'page' : 1}) }}" class="btn">Back To List</a>
        </div>

    </fieldset>
</form>
{% endblock %}
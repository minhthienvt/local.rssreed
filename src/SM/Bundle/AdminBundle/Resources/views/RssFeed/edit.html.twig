{% extends 'SMAdminBundle::admin.html.twig' %}
{% block body %}
<h1>Rss Feed Edit</h1>

<hr />

<form action="{{ path('admin_rssfeed_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }} class="form-horizontal">
    <fieldset>
        <div class="control-group">
            <label class="control-label" for="input01">{{ form_label(edit_form.title) }} <font style="color:red;">*</font></label>
            <div class="controls">
                {{ form_errors(edit_form.title) }}
                {{ form_widget(edit_form.title) }}
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="input01">{{ form_label(edit_form.description) }}</label>
            <div class="controls">
                {{ form_errors(edit_form.description) }}
                {{ form_widget(edit_form.description) }}
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="input01">{{ form_label(edit_form.external_link) }} <font style="color:red;">*</font></label>
            <div class="controls">
                {{ form_errors(edit_form.external_link) }}
                {{ form_widget(edit_form.external_link) }}
            </div>
        </div>

        <div class="control-group">
            <label class="control-label" for="input01">
            </label>
            <div class="controls">
                {{ form_errors(edit_form.automatic_refesh) }}
                {{ form_widget(edit_form.automatic_refesh) }}

                Rafraichissement automatique active toules les

                {{ form_errors(edit_form.time_refesh) }}
                {{ form_widget(edit_form.time_refesh) }}
            </div>
        </div>

        <div class="control-group">
            <label class="control-label" for="input01">
            </label>
            <div class="controls controls-1">
                <span>Plage horaire de rafraichissement</span>
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                &nbsp;&nbsp;&nbsp;&nbsp;
                <div class="block-number">
                    De
                    {{ form_errors(edit_form.begin_refesh) }}
                    {{ form_widget(edit_form.begin_refesh) }}

                    A
                    {{ form_errors(edit_form.end_refesh) }}
                    {{ form_widget(edit_form.end_refesh) }}

                    <span style="font-style: italic;">Please input number between 0 - 23, or leave both blank</span>
                </div>
            </div>
        </div>

        <div class="control-group">
            <label class="control-label" for="input01">
                Status
            </label>
            <div class="controls checkbox-group">
                {{ form_errors(edit_form.main_status) }}
                {{ form_widget(edit_form.main_status) }}
            </div>
        </div>

        <div class="form-actions">
            {{ form_row(edit_form._token) }}
            <button type="submit" class="btn btn-primary">Save changes</button>
            <a href="{{ path('admin_rssfeed', {'page' : 1}) }}" class="btn">Back To List</a>
        </div>

    </fieldset>
</form>
{% endblock %}